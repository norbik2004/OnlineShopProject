@model AccountViewModel;

@{
    Layout = "_Layout";
}

<h1 class="text-center text-success mt-4">
    ACCOUNT
</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @{
                if (Model.PhoneNumber == 0)
                {
                    <h3 class="text-danger">N/A</h3>
                }
                else
                {
                    <h3 class="text-primary">@Model.PhoneNumber</h3>
                }
            }
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-12">
            <h2 class="text-info">
                @(string.IsNullOrEmpty(Model.FullName) ? "N/A" : Model.FullName)
            </h2>
        </div>
    </div>
</div>
