@model AccountViewModel;

@{
    Layout = "_Layout";
}

<h1 class="text-center text-success mt-4">
    Account Details
</h1>

<div class="container shadow p-4 bg-white rounded">

    <div class="row mb-4">
        <div class="col-md-12 text-center">
            @if (!string.IsNullOrEmpty(Model.PhotoURL))
            {
                <img src="@Model.PhotoURL" alt="User Photo" style="width: 150px; height: 150px; border-radius: 50%;" />
            }
            else
            {
                <p class="text-muted"><b>No Profile Photo</b></p>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>Email</th>
                        <td>@(string.IsNullOrEmpty(Model.Email) ? "N/A" : Model.Email)</td>
                    </tr>
                    <tr>
                        <th>Full Name</th>
                        <td>@(string.IsNullOrEmpty(Model.FullName) ? "N/A" : Model.FullName)</td>
                    </tr>
                    <tr>
                        <th>Phone Number</th>
                        <td>@(string.IsNullOrEmpty(Model.PhoneNumber) ? "N/A" : Model.PhoneNumber)</td>
                    </tr>
                    <tr>
                        <th>Street</th>
                        <td>@(string.IsNullOrEmpty(Model.Street) ? "N/A" : Model.Street)</td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>@(string.IsNullOrEmpty(Model.City) ? "N/A" : Model.City)</td>
                    </tr>
                    <tr>
                        <th>Postal Code</th>
                        <td>@(string.IsNullOrEmpty(Model.PostalCode) ? "N/A" : Model.PostalCode)</td>
                    </tr>
                    <tr>
                        <th>Country</th>
                        <td>@(string.IsNullOrEmpty(Model.Country) ? "N/A" : Model.Country)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <a asp-controller="Account" asp-action="ChangeData" class="btn btn-primary w-100 p-2">Change Data</a>
        </div>
        <div class="col-md-6">
            <a asp-controller="Account" asp-action="VerifyEmail" class="btn btn-primary w-100 p-2">Change Password</a>
        </div>
    </div>

</div>
