@model IEnumerable<string>

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">
        Home
    </a>
    @foreach (string category in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(category == ViewData["SelectedCategory"] ? "btn-primary" : "btn-outline-secondary")"
           asp-controller="Home"
           asp-action="Index"
           asp-route-category="@category">
            @category
        </a>
    }
    <a>Selected Categoty: @this.ViewData["SelectedCategory"]</a>
</div>
