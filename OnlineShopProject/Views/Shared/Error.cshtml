@{
	Layout = null;
    ViewData["Title"] = "Error";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error Page</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />

    <style>
        .display-2{
            padding: 7%;
        }

        .btn{
            margin: 3%;
        }
    </style>
</head>
<body>

    <div class="container text-center">
        <div class="row">
            <div class="col">
                <h1 class="display-2 text-center">ERROR PAGE</h1>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h1 class="display-4">@ViewData["ErrorMessage"]</h1>
                <h1 class="display-6">Press button below to go to the HomePage</h1>
                <button type="button" class="btn btn-outline-primary" onclick="location.href='/'">Go to Home</button>
            </div>
        </div>
    </div>

</body>
</html>