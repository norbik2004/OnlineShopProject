@model List<Category>

@{
	Layout = "_AdminLayout";
}

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Amount of products</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>@category.CategoryDescription</td>
                <td>@category.Products.Count()</td>
                <td>
                    <a asp-action="CategoryDetails" asp-route-id="@category.CategoryId" class="btn btn-info">Show More</a>
                    <form asp-action="DeleteCategory" asp-route-productID="@category.CategoryId" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete this Category?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>