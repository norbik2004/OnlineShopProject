@model IEnumerable<OnlineShopProject.Services.Users>

@{
    Layout = "_AdminLayout";
    int pageSize = 3;
    int currentPage = ViewData["CurrentPage"] as int? ?? 1;
    int totalPages = ViewData["TotalPages"] as int? ?? 1;
    int userAmount = ViewData["TotalUsers"] as int? ?? 1;

    int startIndex = (currentPage - 1) * pageSize + 1;
    int endIndex = currentPage * pageSize;
    if (endIndex > userAmount) endIndex = userAmount;
}

<h2>LIST OF USERS</h2>

<h6>Showing @startIndex - @endIndex of @userAmount</h6>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <a asp-action="UserDetails" asp-route-id="@user.Email" class="btn btn-info">Show More</a>
                    <a asp-action="Delete" asp-route-id="@user.Email" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-center">
    @if (currentPage > 1)
    {
        <a asp-action="Users" asp-route-page="@(currentPage - 1)" class="btn btn-secondary">Go Back</a>
    }

    @if (currentPage < totalPages)
    {
        <a asp-action="Users" asp-route-page="@(currentPage + 1)" class="btn btn-primary">Go Further</a>
    }
</div>