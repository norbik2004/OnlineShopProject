@using OnlineShopProject.Services
@model List<Comments>

@{
    Layout = "_AdminLayout";
}

<h2>Dashboard</h2>
<h6>Something will be here shortly</h6>

@if (Model != null && Model.Any())
{
    <h4>Recent Comments</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Author</th>
                <th>Comment</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
                <tr>
                    <td>@comment.User.Email</td>
                    <td>@comment.Text</td>
                    <td>@comment.PublicationDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <form asp-controller="Product" asp-action="DeleteComment" method="post">
                            <input type="hidden" name="productId" value="@comment.ProductId" />
                            <input type="hidden" name="commentId" value="@comment.CommentId" />
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No comments available.</p>
}
